<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_warehouse_inherit_tree" model="ir.ui.view">
        <field name="name">view.warehouse.inherit.tree</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="code"/>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="subsequence"/>
            </xpath>
        </field>
    </record>

    <record id="view_warehouse_inherit_form" model="ir.ui.view">
        <field name="name">view.warehouse.inherit.form</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_view_locations"
                        icon="fa-list-alt"
                        class="oe_stat_button"
                        type="object">
                    <field name="location_count" widget="statinfo"/>
                </button>  
            </xpath>
            <xpath expr="//field[@name='code']" position="after">
                <field name="subsequence"/>
            </xpath>
        </field>
    </record>

</odoo>
