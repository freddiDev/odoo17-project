<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_logistics_header_tree" model="ir.ui.view">
        <field name="name">logistics.header.tree</field>
        <field name="model">logistics.header</field>
        <field name="arch" type="xml">
            <tree string="Logistics">
                <field name="name"/>
                <field name="date"/>
                <field name="warehouse_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_logistics_header_form" model="ir.ui.view">
        <field name="name">logistics.header.form</field>
        <field name="model">logistics.header</field>
        <field name="arch" type="xml">
            <form string="Logistics" create="1" edit="1">
                <header>
                    <button name="action_submit" string="Submit" type="object" invisible="state != 'draft'" class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" class="oe_inline"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" readonly="state == 'done'"/>
                        </group>
                        <group>
                            <field name="warehouse_id" readonly="state == 'done'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="line_ids" context="{'default_header_id': active_id}" editable="bottom" readonly="state == 'done'">
                                <tree editable="bottom" create="0" delete="0" string="Logistics Lines">
                                    <field name="vendor_logistic_id" column_invisible="True"/>
                                    <field name="vendor_logistic_name"/>
                                    <field name="purchase_id"/>
                                    <field name="picking_id"/>
                                    <field name="no_resi"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
     

    <record id="action_logistics_header" model="ir.actions.act_window">
        <field name="name">Logistik</field>
        <field name="res_model">logistics.header</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

</odoo>
