<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_update_sale_price_wizard_form" model="ir.ui.view">
        <field name="name">update.sale.price.wizard.form</field>
        <field name="model">update.sale.price.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Harga Jual">
                <group>
                    <field name="supplier_id"/>
                    <field name="po_date"/>
                    <field name="motif_id"/>
                    <field name="model_id"/>
                    <field name="color_id"/>
                    <field name="size_id"/>
                </group>
                <footer>
                    <button name="action_search_products" type="object" string="Search" class="btn-primary"/>
                    <button name="action_update_price" type="object" string="Update Harga Jual" class="btn-success"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
                <separator string="Product List"/>
                <field name="line_ids">
                    <tree editable="bottom" create="0" delete="0">
                        <field name="default_code"/>
                        <field name="product_name"/>
                        <field name="sale_price"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>
    
    <record id="action_update_sale_price_wizard" model="ir.actions.act_window">
        <field name="name">Update Harga Jual</field>
        <field name="res_model">update.sale.price.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_update_sale_price_wizard_form"/>
    </record>
</odoo>
