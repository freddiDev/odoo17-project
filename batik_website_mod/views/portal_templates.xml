<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <template id="portal_my_details_inherit_batik" inherit_id="portal.portal_my_details">
            <xpath expr="//button[@type='submit']" position="before">
                <div class="col-lg-12 mb-4" style="margin-top: 30px;background-color: #e4e4e4;padding: 25px;border-radius: 1em;">
                    <h4>Legal Documents</h4>
