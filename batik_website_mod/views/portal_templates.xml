                    </div>
                </div>
            </xpath>
        </template>

    <template id="portal_my_home_vendor_logistic" name="Show Vendor Logistic" customize_show="True" inherit_id="portal.portal_my_home" priority="25">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/batik_website_mod/static/src/img/logistic.svg'"/>
                <t t-set="title">Vendor Logistic</t>
                <t t-set="text">Follow your delivery logistic.</t>
                <t t-set="url" t-value="'/my/vendor_logistic'"/>
                <t t-set="placeholder_count" t-value="'vl_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_home_qc_report" name="Show qc report" customize_show="True" inherit_id="portal.portal_my_home" priority="26">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/batik_website_mod/static/src/img/quality.svg'"/>
                <t t-set="title">Vendor QC Report</t>
                <t t-set="text">Track and review quality for your products.</t>
                <t t-set="url" t-value="'/my/qc_report'"/>
                <t t-set="placeholder_count" t-value="'qc_count'"/>
            </t>
        </xpath>
    </template>

    <template id="picking_portal_my_home" name="Portal My Home : picking entries" inherit_id="portal.portal_my_home" priority="20">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="picking_count" t-call="portal.portal_docs_entry">
                <t t-set="title">Goods Receipt</t>
                <t t-set="url" t-value="'/my/pickings'" />
                <t t-set="count" t-value="picking_count" />
            </t>
        </xpath>
    </template>

</odoo>
