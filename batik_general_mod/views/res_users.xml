<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_users_form_inherit_warehouse" model="ir.ui.view">
        <field name="name">res.users.form.inherit.warehouse</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']/group" position="after">
                <group>
                    <field name="warehouse_id" required="1" force_save="1"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>