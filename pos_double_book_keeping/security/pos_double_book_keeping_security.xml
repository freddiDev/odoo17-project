<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
        <record id="group_pos_double_book_keeping_user" model="res.groups">
            <field name="name">Double Book Keeping</field>
            <field name="category_id" ref="base.module_category_point_of_sale"/>
        </record>

        <record id="pos_double_book_keeping_rule_restrict" model="ir.rule">
            <field name="name">POS Double Book Keeping: Normal</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[('pos_double_book_keeping_id', '=', False)]</field>
            <field name="groups" eval="[]"/>
        </record>

        <record id="pos_double_book_keeping_rule_full_access" model="ir.rule">
            <field name="name">POS Double Book Keeping: Allow Full Access</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('pos_double_book_keeping.group_pos_double_book_keeping_user'))]"/>
        </record>
    </data>

</odoo>
