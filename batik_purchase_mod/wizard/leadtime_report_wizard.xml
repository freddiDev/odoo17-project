<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_leadtime_report" model="ir.actions.act_window">
        <field name="name">Leadtime Report</field>
        <field name="res_model">leadtime.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <record id="view_leadtime_report_wizard" model="ir.ui.view">
        <field name="name">leadtime.report.wizard.form</field>
        <field name="model">leadtime.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Leadtime Report Wizard">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button name="action_generate_report" type="object" class="btn-primary" string="Generate"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
