<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_purchase_ref_wiz_form" model="ir.ui.view">
        <field name="name">purchase.ref.wiz.form</field>
        <field name="model">purchase.ref.wiz</field>
        <field name="arch" type="xml">
            <form string="Purchase Reference Wizard">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" />
                        </group>
                        <group>
                            <field name="purchase_id" invisible="1"/>
                            <field name="condition_type" widget="selection"/>
                        </group>
                    </group>
                    <notebook invisible="not condition_type">
                        <page name="lines" string="Product">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity" />
                                    <field name="wizard_id" column_invisible="True"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                    <footer>
                        <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
