<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="pos_config_view_form_inherit" model="ir.ui.view">
        <field name="name">pos.config.view.form.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="equip3_pos_general.pos_config_retail"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='save_order_history_local']" position="inside">
                <div id="sync_from_pos_cache_sdk_settings_container"
                    class="row mt16 o_settings_container">
                    <div id="sync_from_pos_cache_sdk_setting_box" 
                        class="col-xs-12 col-md-12 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_pos_load_data_from_pos_cache_sdk"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_pos_load_data_from_pos_cache_sdk" 
                                string="POS Cache (Service)"/>
                            <div class="text-muted">Load masterdata and auto sync via POS Cache</div>
                        </div> 
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>