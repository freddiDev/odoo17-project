<odoo>
    <record id="action_petty_cash_voucher" model="ir.actions.act_window">
        <field name="name">Petty Cash Vouchers</field>
        <field name="res_model">petty.cash.voucher</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    
    <!-- Tree -->
    <record id="view_petty_cash_voucher_tree" model="ir.ui.view">
        <field name="name">petty.cash.voucher.tree</field>
        <field name="model">petty.cash.voucher</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'approved'"
                  decoration-danger="state == 'rejected'"
                  decoration-muted="state == 'draft'"
                  decoration-warning="state == 'submitted'">
                <field name="name"/>
                <field name="date"/>
                <field name="petty_cash_id"/>
                <field name="amount"/>
                <field name="state"/>
                <field name="submitter_id"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_petty_cash_voucher_form" model="ir.ui.view">
        <field name="name">petty.cash.voucher.form</field>
        <field name="model">petty.cash.voucher</field>
        <field name="arch" type="xml">
            <form string="Petty Cash Voucher">
                <header>
                    <button name="action_submit" type="object" string="Submit" invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_approve" type="object" string="Approve" class="btn-success"
                            invisible="state != 'submitted' or is_custodian == False"/>
                    <button name="action_reject" type="object" string="Reject" class="btn-danger"
                            invisible="state != 'submitted' or is_custodian == False"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,rejected,reconciled"/>
                </header>

                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="date" readonly="state != 'draft'"/>
                        <field name="petty_cash_id" readonly="state != 'draft'"/>
                        <field name="amount" readonly="state != 'draft'"/>
                        <field name="product_expense" readonly="state != 'draft'"/>
                        <field name="attachment" filename="attachment_filename"/>
                        <field name="currency_id" readonly="1" invisible="1"/>
                        <field name="submitter_id" readonly="1"/>
                        <field name="move_id" readonly="1"/>
                        <field name="is_custodian" invisible="1"/>
                    </group>
                    <group>
                        <field name="description" readonly="state != 'draft'"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity" optional="show"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <menuitem id="menu_petty_cash_root" name="Petty Cash" sequence="10"/>

    <menuitem id="menu_petty_cash_voucher"
              name="Petty Cash Vouchers"
              parent="menu_petty_cash_root"
              action="action_petty_cash_voucher"
              sequence="20"/>
</odoo>
