<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- To inherit pos session -->
    <record id="pos_config_view_form" model="ir.ui.view">
        <field name="name">pos.config.view.form.inherit.service.charges.pos</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='other_devices']" position="after">
                <setting help="Setup Redeem Product on orders">
                    <div class="content-group mt16">
                        <div class="row">
                            <label for="redeem_product_id" class="col-lg-3 o_light_label"/>
                            <field name="redeem_product_id" required="1"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
