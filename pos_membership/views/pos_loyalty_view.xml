<?xml version="1.0" encoding="utf-8"?>
<odoo>
	 <record id="pos_loyalty_point_tree" model="ir.ui.view">
        <field name="name">pos.loyalty.point.tree</field>
        <field name="model">pos.loyalty.point</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <tree string="Loyalty Points" create="false" edit="false" delete="false" default_order="end_date asc">
                <field name="partner_id"/>
                <field name="member_phone"/>
                <field name="point"/>
                <field name="order_id" optional="hide"/>
                <field name="type" optional="show"/>
                <field name="remaining_point" optional="show"/>
                <field name="product_redeemed_ids" widget="many2many_tags" optional="hide"/>
                <field name="create_date"/>
                <field name="end_date"/>
                <field name="company_id" optional="hide"  readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="pos_loyalty_point_form" model="ir.ui.view">
        <field name="name">pos.loyalty.point.form</field>
        <field name="model">pos.loyalty.point</field>
        <field name="arch" type="xml">
            <form string="Loyalty Point" create="false" edit="false" delete="false">
                <header></header>
                <sheet>
                    <div class="oe_title">
                        <label for="loyalty_id" class="oe_edit_only"/>
                        <h1><field name="loyalty_id" class="oe_inline"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" />
                            <field name="member_phone"/>
                            <field name="point"/>
                            <field name="remaining_point" invisible="type != 'plus' or point == 0"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="order_id"/>
                            <field name="type"/>
                            <field name="member_point"/>
                            <field name="redeemed_point"/>
                            <field name="company_id" readonly="1"/>
                            <field name="create_date"/>
                            <field name="end_date" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pos_membership_points_action">
        <field name="name">Member Points</field>
        <field name="res_model">pos.loyalty.point</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>