<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_member_view_tree" model="ir.ui.view">
        <field name="name">pos_member.view.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Members">
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="membership_date"/>
                <field name="is_membership" column_invisible="1"/>
                <field name="member_type"/>
            </tree>
        </field>
    </record>

    <record id="pos_member_view_form" model="ir.ui.view">
        <field name="name">pos_member.view.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Member">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_128&quot;}"/>
                    <div class="oe_title">
                        <field name="is_company" invisible="1"/>
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <span class="o_form_label o_td_label" name="address_name">
                                <b invisible="not is_company">Address</b>
                            </span>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <div name="partner_address_country" class="d-flex justify-content-between">
                                    <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                </div>
                            </div>
                        </group>
                        <group>
                            <field name="phone" required="1" widget="phone"/>
                            <field name="email" required="1" widget="email"/>
                            <field name="membership_date"/>
                            <field name="is_membership" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="member-info" string="Member Info">
                            <group>
                                <group>
                                    <field name="member_type"/>
                                    <field name="member_type_id" />
                                    <field name="pos_loyal_point"/>
                                    <field name="total_earned_point" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pos_members" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_membership', '=', True)]</field>
        <field name="context">{'default_is_membership': True}</field>
        <field name="view_id" ref="pos_member_view_tree"/>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('pos_member_view_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('pos_member_view_form')})
        ]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a member
            </p>
            <p>
                Membership management.
            </p>
        </field>
    </record>

</odoo>
