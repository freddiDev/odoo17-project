<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="member_type_view_tree" model="ir.ui.view">
        <field name="name">member.type.view.tree</field>
        <field name="model">member.type</field>
        <field name="arch" type="xml">
            <tree string="Member Types">
                <field name="name"/>
                <field name="point_from" />
                <field name="point_to" />
                <field name="active" />
            </tree>
        </field>
    </record>

    <record id="member_type_view_form" model="ir.ui.view">
        <field name="name">member.type.view.form</field>
        <field name="model">member.type</field>
        <field name="arch" type="xml">
            <form string="Member Types">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Member Type Name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Silver, Gold, Platinum" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="point_from" class='form-control'/>
                            <field name="point_to" class='form-control'/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pos_membership_type" model="ir.actions.act_window">
        <field name="name">Member Types</field>
        <field name="res_model">member.type</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <div class="o_loyalty_not_found container mt64">
                <h1>Member Types.</h1>
                <p class="lead">Create one type of members:</p>
            </div>
        </field>
    </record>

</odoo>
