<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_membership.RedeemRewardPopupWidget">
        <div class="popup popup-selection">
            <div class="modal-header">
                <h4 class="modal-title text-center fw-bolder">Redeem and Reward</h4>
            </div>
            <div class="modal-body">
                <div class="product-list-container flex-grow-1 overflow-y-auto" style="height: 400px;">
                    <div class="product-list d-grid gap-2 p-2">
                        <article class="flex-column product position-relative btn btn-light d-flex align-items-stretch p-0 m-0 text-start cursor-pointer overflow-hidden shadow-sm hover-shadow-lg transition-base rounded-lg"
                                 t-foreach="products || []"
                                 t-as="item"
                                 t-key="item.id"
                                 t-att-data-product-id="item.id"
                                 t-on-click="click_on_rr_product">
                            <div class="position-relative w-100" style="height: 150px;">
                                <img class="w-100 h-100 object-fit-cover" t-att-src="item.rr_image_url" alt="Product image"/>
                                <div class="position-absolute top-0 end-0 m-2 px-2 py-1 bg-primary text-white rounded-pill shadow-sm fw-bold small">
                                    <i class="fa fa-star me-1"></i>
                                    <t t-esc="item.used_points"/> pts
                                </div>
                            </div>
                            <div class="product-content d-flex flex-column justify-content-between mx-2 py-2">
                                <div class="fw-bolder text-dark lh-sm product-name">
                                    <t t-esc="item.display_name"/>
                                </div>
                                <span t-if="item.lst_price == 0.0"
                                      class="text-secondary fw-bold small mt-1">FREE</span>
                            </div>
                        </article>
                    </div>
                </div>
            </div>
            <div class="footer footer-flex modal-footer">
                <div class="button cancel odoo-theme-button" t-on-click="cancel">
                    Close
                </div>
            </div>
        </div>
    </t>

</templates>
