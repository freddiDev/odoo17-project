<?xml version="1.0" encoding="UTF-8"?>
<templates id="pos_membership_templates" xml:space="preserve">

    <t t-name="pos_membership.RedeemPointsInputPopup">
        <div class="popup popup-selection rounded-4 shadow-lg overflow-hidden">

            <div class="modal-header bg-primary text-white py-2 px-3">
                <h5 class="modal-title fw-bold mx-auto mb-0">
                    Redeem Points
                </h5>
            </div>

            <div class="modal-body p-3 bg-light">

                <div class="p-2 bg-white rounded-3 shadow-sm d-flex gap-3 align-items-center">
                    <img t-att-src="props.reward.image_url"
                         class="rounded-3"
                         style="width:65px; height:65px; object-fit:cover;" />

                    <div>
                        <div class="fw-bold" t-esc="props.reward.display_name"/>
                        <div class="text-muted small mt-1">
                            Min: <t t-esc="props.reward.required_points"/> pts â€¢
                            Max: <t t-esc="props.reward.max_points"/> pts
                        </div>
                    </div>
                </div>

                <div class="mt-3 p-2 bg-white rounded-3 shadow-sm text-center">

                    <label class="small fw-semibold text-secondary">Jumlah Poin</label>

                    <div class="d-flex justify-content-center mt-2">
                        <input type="number"
                               class="form-control form-control-sm text-center fw-bold"
                               style="width: 120px; border-radius: 10px;"
                               t-att-value="state.points"
                               t-on-input="onChangePoints"
                               t-att-min="props.reward.required_points"
                               t-att-max="props.reward.max_points"/>
                    </div>
                </div>

                <div class="mt-3 p-3 rounded-3 text-center shadow-sm"
                     style="background:#eef6ff; border:1px solid #d9e9ff;">

                    <div class="small text-primary fw-semibold">Total Diskon</div>

                    <div class="fs-4 fw-bold text-primary mt-1">
                        Rp <t t-esc="computed_discount"/>
                    </div>
                </div>

            </div>
            <div class="modal-footer bg-white py-2 border-top justify-content-center">
                <button class="btn btn-outline-secondary btn-sm px-3 py-1 rounded-pill"
                        t-on-click="cancel">
                    Batal
                </button>

                <button class="btn btn-primary btn-sm px-4 py-1 rounded-pill shadow-sm"
                        t-on-click="confirm">
                    Gunakan
                </button>
            </div>

        </div>
    </t>

</templates>
