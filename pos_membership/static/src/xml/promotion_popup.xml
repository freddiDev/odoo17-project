<templates>
    <t t-name="PromotionPopup" owl="1">
        <div class="popup popup-selection">
            <h3>Promotion</h3>
            <p>Wajib pilih salah satu product promo</p>

            <div class="list-group">
                <t t-foreach="props.rewards" t-as="r" t-key="r.product_id">
                    <button class="list-group-item list-group-item-action"
                            t-on-click="() => this.selectProduct(r)">
                        <t t-esc="r.product_name"/> (FREE)
                    </button>
                </t>
            </div>

            <footer class="mt-3">
                <button class="btn btn-primary w-100"
                        t-on-click="confirm">
                    OK
                </button>
            </footer>
        </div>
    </t>
</templates>
