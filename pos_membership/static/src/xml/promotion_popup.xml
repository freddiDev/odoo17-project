<templates>
    <t t-name="PromotionPopup" owl="1">
        <div class="popup popup-selection promotion-popup">

            <!-- HEADER -->
            <div class="promotion-header text-center mb-3">
                <div class="promotion-icon mb-2">
                    <i class="fa fa-gift fa-2x text-primary"/>
                </div>
                <h3 class="fw-bold mb-1">Promotion Reward</h3>
                <p class="text-muted mb-0">
                    Pilih <strong>1</strong> produk gratis
                </p>
            </div>

            <!-- PRODUCT GRID -->
            <div class="promotion-grid">
                <t t-foreach="props.rewards" t-as="r" t-key="r.product_id">
                    <div class="promotion-card"
                         t-on-click="() => this.selectProduct(r)">
                        <div class="promotion-card-body text-center">
                            <div class="promotion-product-name">
                                <t t-esc="r.product_name"/>
                            </div>
                            <div class="promotion-free-badge">
                                FREE
                            </div>
                        </div>
                    </div>
                </t>
            </div>

            <!-- FOOTER -->
            <footer class="mt-3">
                <button class="btn btn-outline-secondary w-100"
                        t-on-click="cancel">
                    Close
                </button>
            </footer>
        </div>
    </t>
</templates>
